# Configuración del Proxy Reverso para Render

# URL o IP de tu aplicación Laravel (OBLIGATORIO)
# Ejemplos:
#   LARAVEL_APP_URL=http://123.456.789.012:8000
#   LARAVEL_APP_URL=http://tu-servidor-laravel.com
#   LARAVEL_APP_URL=https://tu-app-laravel.com
LARAVEL_APP_URL=http://localhost:8000

# Puerto en el que escuchará el proxy (Render usa la variable PORT automáticamente)
PORT=8080

# Rutas permitidas (separadas por |)
# Si está vacío, permite todas las rutas
# Ejemplos:
#   ALLOWED_PATHS=^/api/.*|^/public/.*|^/$
#   ALLOWED_PATHS=^/api/.*
# Deja vacío para permitir todas las rutas
ALLOWED_PATHS=

# Rutas bloqueadas (separadas por |)
# Estas rutas serán bloqueadas y retornarán 403
# Ejemplos:
#   BLOCKED_PATHS=^/admin.*|^/phpmyadmin.*|^/\.env
#   BLOCKED_PATHS=^/admin.*
BLOCKED_PATHS=^/\.env|^/\.git.*

# Tamaño máximo de archivos a subir (en MB)
MAX_UPLOAD_SIZE=100

# Timeout de conexión (en segundos)
PROXY_TIMEOUT=60
