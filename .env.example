APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# ============================================
# SEGURIDAD - OCULTAR INFORMACIÓN DEL SERVIDOR
# ============================================
# En producción, SIEMPRE usar estos valores:
# APP_DEBUG=false
# APP_ENV=production
# EXPOSE_PHP=false (configurar en php.ini también)

# ============================================
# CONFIGURACIÓN PARA PROXY REVERSO (RENDER)
# ============================================
# Activa estas opciones cuando uses el proxy reverso
# Para ocultar la URL/IP real del servidor backend

# Habilitar modo proxy (true cuando uses Render)
BEHIND_PROXY=false

# URL del proxy (la URL pública de Render)
# Ejemplo: https://tu-app.onrender.com
PROXY_URL=

# Forzar HTTPS (true cuando el proxy use HTTPS)
FORCE_HTTPS=false

# URL de assets (debe coincidir con PROXY_URL)
ASSET_URL=

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
# Cuando uses proxy, configura:
# SESSION_DOMAIN=.tu-app.onrender.com
SESSION_SECURE_COOKIE=false
# Cuando uses HTTPS con proxy: SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# ============================================
# RENDER PROXY KEEP-ALIVE
# ============================================
# URLs de los proxies de Render para mantenerlos despiertos
# Formato: URLs separadas por coma, sin espacios
# Ejemplo: https://proxy1.onrender.com,https://proxy2.onrender.com,https://proxy3.onrender.com
RENDER_PROXY_URLS=

# Token opcional para proteger el endpoint /api/render/ping
RENDER_PING_TOKEN=
