# EditorConfig para mantener consistencia de codificaci√≥n
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
charset = utf-8
indent_style = space
indent_size = 4

[*.blade.php]
charset = utf-8
indent_style = space
indent_size = 4

[*.js]
charset = utf-8
indent_style = space
indent_size = 2

[*.json]
charset = utf-8
indent_style = space
indent_size = 2

[*.yml]
charset = utf-8
indent_style = space
indent_size = 2

[*.md]
charset = utf-8
trim_trailing_whitespace = false
